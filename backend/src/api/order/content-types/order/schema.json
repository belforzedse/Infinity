{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "Description": {
      "type": "text"
    },
    "Note": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "contract": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::contract.contract",
      "inversedBy": "order"
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "Paying",
        "Started",
        "Shipment",
        "Done",
        "Returned",
        "Cancelled"
      ],
      "default": "Paying"
    },
    "Date": {
      "type": "datetime",
      "required": true
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "Manual",
        "Automatic"
      ],
      "default": "Automatic"
    },
    "shipping": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping.shipping",
      "inversedBy": "orders"
    },
    "delivery_address": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::local-user-address.local-user-address"
    },
    "ShippingCost": {
      "type": "integer",
      "required": false,
      "min": 0,
      "default": 0
    },
    "ShippingBarcode": {
      "type": "string"
    },
    "ShippingPostPrice": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "ShippingTax": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "ShippingWeight": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "ShippingBoxSizeId": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "external_id": {
      "type": "string",
      "unique": false
    },
    "external_source": {
      "type": "string"
    },
    "DiscountCode": {
      "type": "string"
    },
    "AppliedGeneralDiscountId": {
      "type": "integer"
    },
    "AppliedDiscountAmount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "PaymentGateway": {
      "type": "enumeration",
      "enum": [
        "Unknown",
        "Wallet",
        "Mellat",
        "SnappPay",
        "SamanKish"
      ],
      "default": "Unknown"
    }
  }
}
