              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": ["Auth"],
        "parameters": [],
        "operationId": "get/auth/self",
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/welcome": {
      "post": {
        "responses": {
          "200": {
