{
  "/sp/local-users": {
    "post": {
      "description": "Create a new local user with additional user information",
      "tags": ["Local-user"],
      "operationId": "post/sp/local-users",
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LocalUserResponse"
              }
            }
          }
        },
        "400": {
          "description": "Bad Request - Invalid phone number format",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Error"
              }
            }
          }
        },
        "500": {
          "description": "Internal Server Error",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Error"
              }
            }
          }
        }
      },
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's first name"
                },
                "lastName": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's last name"
                },
                "phone": {
                  "type": "string",
                  "description": "User's phone number (required)"
                },
                "password": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's password"
                },
                "birthDate": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's birth date"
                },
                "gender": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's gender"
                },
                "bio": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's biography"
                },
                "isActive": {
                  "type": "boolean",
                  "default": false,
                  "description": "User's active status"
                },
                "nationalCode": {
                  "type": "string",
                  "nullable": true,
                  "description": "User's national code"
                },
                "role": {
                  "type": "integer",
                  "default": 0,
                  "description": "User's role"
                }
              },
              "required": ["phone"]
            }
          }
        }
      }
    }
  }
}
