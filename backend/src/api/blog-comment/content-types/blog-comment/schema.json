{
  "kind": "collectionType",
  "collectionName": "blog_comments",
  "info": {
    "singularName": "blog-comment",
    "pluralName": "blog-comments",
    "displayName": "Blog Comment",
    "description": "Comments on blog posts with moderation support"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "Content": {
      "type": "text",
      "required": true,
      "maxLength": 2000
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Approved",
        "Rejected"
      ],
      "default": "Pending",
      "required": true
    },
    "Date": {
      "type": "datetime",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "blog_comments"
    },
    "blog_post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-post.blog-post",
      "inversedBy": "blog_comments"
    },
    "parent_comment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-comment.blog-comment",
      "inversedBy": "replies"
    },
    "replies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-comment.blog-comment",
      "mappedBy": "parent_comment"
    }
  }
}
