    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # HTTP/2 Optimizations
    http2_max_field_size 16k;
    http2_max_header_size 32k;
    http2_max_concurrent_streams 100;

    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
